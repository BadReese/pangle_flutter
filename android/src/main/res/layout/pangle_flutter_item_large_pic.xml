<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="310dp"
    android:background="@color/tt_white"
    android:clipToPadding="false"
    android:paddingHorizontal="16dp"
    android:paddingTop="16dp">

    <androidx.constraintlayout.widget.Group
        android:id="@id/group_listitem"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@color/pangle_flutter_divider"
        app:constraint_referenced_ids="tv_listitem_ad_desc,btn_listitem_creative"
        app:layout_constraintEnd_toEndOf="@id/iv_listitem_image"
        app:layout_constraintStart_toStartOf="@id/iv_listitem_image"
        app:layout_constraintTop_toBottomOf="@id/iv_listitem_image" />

    <ImageView
        android:id="@+id/iv_listitem_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/tt_ad_logo_small"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@id/tv_listitem_ad_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/tv_listitem_ad_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/iv_listitem_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_listitem_icon"
        app:layout_constraintTop_toTopOf="@id/iv_listitem_icon"
        tools:text="着陆无双" />

    <ImageView
        android:id="@+id/iv_listitem_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pangle_flutter_placeholder"
        app:layout_constraintDimensionRatio="W,9:16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_listitem_ad_title" />


    <!-- title+creativeBtn layout -->
    <TextView
        android:id="@+id/tv_listitem_ad_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="#333333"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@id/group_listitem"
        app:layout_constraintEnd_toStartOf="@id/btn_listitem_creative"
        app:layout_constraintStart_toStartOf="@id/iv_listitem_image"
        app:layout_constraintTop_toTopOf="@id/group_listitem"
        tools:text="计策略，才真三国！" />


    <Button
        android:id="@id/btn_listitem_creative"
        android:layout_width="68dp"
        android:layout_height="28dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/pangle_flutter_btn_bg_creative"
        android:gravity="center"
        android:maxLines="1"
        android:paddingHorizontal="0dp"
        android:singleLine="true"
        android:text="立即下载"
        android:textColor="#3399cc"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@id/group_listitem"
        app:layout_constraintEnd_toEndOf="@id/group_listitem"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@id/tv_listitem_ad_desc"
        app:layout_constraintTop_toTopOf="@id/group_listitem" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/pangle_flutter_btn_bg_ad"
        android:gravity="center"
        android:layerType="none"
        android:paddingHorizontal="6dp"
        android:paddingVertical="2dp"
        android:text="@string/tt_ad_logo_txt"
        android:textColor="#3399cc"
        android:textSize="7dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_listitem_dislike"
        app:layout_constraintStart_toStartOf="@id/group_listitem"
        app:layout_constraintTop_toTopOf="@id/iv_listitem_dislike" />

    <ImageView
        android:id="@id/iv_listitem_dislike"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:paddingHorizontal="8dp"
        android:src="@drawable/pangle_flutter_dislike"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@id/group_listitem"
        app:layout_constraintTop_toBottomOf="@id/group_listitem"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>