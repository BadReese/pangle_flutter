<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@color/tt_white"
    android:clipToPadding="false"
    android:paddingHorizontal="16dp"
    android:paddingTop="16dp">

    <ImageView
        android:id="@id/iv_listitem_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/tt_ad_logo_small"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@id/tv_listitem_ad_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@id/tv_listitem_ad_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/iv_listitem_icon"
        app:layout_constraintEnd_toStartOf="@id/iv_listitem_image"
        app:layout_constraintStart_toEndOf="@id/iv_listitem_icon"
        app:layout_constraintTop_toTopOf="@id/iv_listitem_icon"
        tools:text="着陆无双" />


    <TextView
        android:id="@id/tv_listitem_ad_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:lines="2"
        android:maxLines="2"
        android:singleLine="false"
        android:textColor="#70000000"
        android:textSize="14dp"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="@id/iv_listitem_image"
        app:layout_constraintEnd_toStartOf="@id/iv_listitem_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_listitem_icon"
        app:layout_constraintVertical_bias="1"
        tools:text="80后的回忆！经典三国完美复刻，安卓用户的福利" />


    <ImageView
        android:id="@id/iv_listitem_image"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/pangle_flutter_placeholder"
        app:layout_constraintDimensionRatio="W,9:16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@id/v_listitem_ad_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/pangle_flutter_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_listitem_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/pangle_flutter_btn_bg_ad"
        android:gravity="center"
        android:layerType="none"
        android:paddingHorizontal="6dp"
        android:paddingVertical="2dp"
        android:text="@string/tt_ad_logo_txt"
        android:textColor="#3399cc"
        android:textSize="7dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_listitem_dislike"
        app:layout_constraintStart_toStartOf="@id/iv_listitem_icon"
        app:layout_constraintTop_toTopOf="@id/iv_listitem_dislike" />

    <ImageView
        android:id="@id/iv_listitem_dislike"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:paddingHorizontal="8dp"
        android:src="@drawable/pangle_flutter_dislike"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@id/iv_listitem_image"
        app:layout_constraintTop_toBottomOf="@id/v_listitem_ad_divider"
        app:layout_constraintVertical_bias="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>